(jbuild_version 1)

(executable
 ((name      test)
  (modules   (Test))
  (libraries (tyre alcotest))
  (modes (byte))
  (link_flags(
    -I +compiler-libs
    ocamlcommon.cma 
    ocamlbytecomp.cma
    ocamltoplevel.cma
    metalib.cma 
    berstart.cmo
  ))
  ))

(alias
 ((name runtest)
  (deps (test.exe))
  (action (run ${exe:test.exe}))
))
